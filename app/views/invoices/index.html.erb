<div class="page-header">
  <h1>
    Invoices
    <a href="/invoices/new" class="btn btn-lg btn-success">New Invoice</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "invoices_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :requestor_notes_cont, "Requestor notes contains" %>
    <%= f.text_field :requestor_notes_cont, :class => "form-control", :placeholder => "Requestor notes contains" %>
  </div>

<div class="form-group">
    <%= f.label :approved_eq, "Approved" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :approved_eq, "1", checked: ((params[:q] && params[:q][:approved_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :approved_eq, "0", checked: ((params[:q] && params[:q][:approved_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :approved_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
          <%= f.label :submitted_on, "Submitted on" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='submitted_ongteqPicker'>
                  <%= f.text_field :submitted_on_gteq, :class => "form-control", :placeholder => "Submitted on greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='submitted_onlteqPicker'>
                  <%= f.text_field :submitted_on_lteq, :class => "form-control", :placeholder => "Submitted on less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#submitted_ongteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#submitted_onlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#submitted_ongteqPicker').on("dp.change", function (e) {
                  $('#submitted_onlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#submitted_onlteqPicker').on("dp.change", function (e) {
                  $('#submitted_ongteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :submitted_eq, "Submitted" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :submitted_eq, "1", checked: ((params[:q] && params[:q][:submitted_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :submitted_eq, "0", checked: ((params[:q] && params[:q][:submitted_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :submitted_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
  <%= f.label :dollar_amount, "Dollar amount" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :dollar_amount_gteq, :class => "form-control", :placeholder => "Dollar amount greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :dollar_amount_lteq, :class => "form-control", :placeholder => "Dollar amount less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :approver_user_id, "Approver user" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :approver_user_id_gteq, :class => "form-control", :placeholder => "Approver user greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :approver_user_id_lteq, :class => "form-control", :placeholder => "Approver user less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "User Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='ambassadorgteqcreated_atPicker'>
                  <%= f.text_field :ambassador_created_at_gteq, :class => "form-control", :placeholder => "User Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='ambassadorlteqcreated_atPicker'>
                  <%= f.text_field :ambassador_created_at_lteq, :class => "form-control", :placeholder => "User Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#ambassadorgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#ambassadorlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#ambassadorgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#ambassadorlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#ambassadorlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#ambassadorgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/invoices" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#invoices_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Requestor user</th>
        <th>Approver user</th>
        <th>Dollar amount</th>
        <th>Submitted</th>
        <th>Submitted on</th>
        <th>Approved</th>
        <th>Requestor notes</th>
        <th>Actions</th>
      </tr>

      <% @invoices.each do |invoice| %>
      <tr>
        <td>
          <% if invoice.ambassador.present? %>
            <a href="/users/<%= invoice.ambassador.id %>">
              <%= invoice.ambassador.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= invoice.approver_user_id %></td>
        <td><%= invoice.dollar_amount %></td>
        <td><%= invoice.submitted %></td>
        <td><%= invoice.submitted_on %></td>
        <td><%= invoice.approved %></td>
        <td><%= invoice.requestor_notes %></td>
        <td>
          <a href="/invoices/<%= invoice.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == invoice.ambassador %>
            <a href="/invoices/<%= invoice.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_invoice/<%= invoice.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @invoices, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
