<a href="/" class="btn btn-lg btn-warning">Back to My Dashboard</a>

<div class="page-header">
  <h1>
    All Referrals Detail
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Accepted?</th>
      </tr>

      <% @referrals.each do |referral| %>
      <tr>
        <td><%= referral.invited_user_email %></td>
        <td><%= referral.accepted_at %></td>
      </tr>
      <% end %>

    </table>
  </div>
</div>
