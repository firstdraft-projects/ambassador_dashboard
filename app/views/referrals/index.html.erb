<div class="page-header">
  <h1>
    Referrals
    <a href="/referrals/new" class="btn btn-lg btn-success">New Referral</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "referrals_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "User Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='referrergteqcreated_atPicker'>
                  <%= f.text_field :referrer_created_at_gteq, :class => "form-control", :placeholder => "User Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='referrerlteqcreated_atPicker'>
                  <%= f.text_field :referrer_created_at_lteq, :class => "form-control", :placeholder => "User Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#referrergteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#referrerlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#referrergteqcreated_atPicker').on("dp.change", function (e) {
                  $('#referrerlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#referrerlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#referrergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :school_school_name_cont, "School school_name contains" %>
      <%= f.text_field :school_school_name_cont, :class => "form-control", :placeholder => "School school_name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/referrals" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#referrals_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Referrer</th>
        <th>School</th>
        <th>Actions</th>
      </tr>

      <% @referrals.each do |referral| %>
      <tr>
        <td>
          <% if referral.referrer.present? %>
            <a href="/users/<%= referral.referrer.id %>">
              <%= referral.referrer.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if referral.school.present? %>
            <a href="/schools/<%= referral.school.id %>">
              <%= referral.school.school_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/referrals/<%= referral.id %>" class="btn btn-primary">Show</a>
          <a href="/referrals/<%= referral.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_referral/<%= referral.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @referrals, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
