<!-- Validation failure messages -->
<% if @referral.errors.any? %>
  <% @referral.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Referral</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_referral" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for referrer_id -->
      <div class="form-group">
        <label for="referrer_id" class="control-label">
          Referrer
        </label>

        <input type="text" id="referrer_id" name="referrer_id" placeholder="Referrer" class="form-control" value="<%= @referral.referrer_id %>">
      </div>

      <!-- Label and input for school_id -->
      <div class="form-group">
        <label for="school_id" class="control-label">
          School
        </label>

        <input type="text" id="school_id" name="school_id" placeholder="School" class="form-control" value="<%= @referral.school_id %>">
      </div>

      <button class="btn btn-success">
        Create Referral
      </button>
      or
      <a href="/referrals">Cancel</a>
    </form>
  </div>
</div>
